#include <locale.h>
#include <stdio.h>
int main(void) {
    setlocale(LC_ALL, "Russian");
    int A[5] = { 5,4,2,3,6 };
    int i = 0;
    int max = A[0];// Инициализация максимального значения первым элементом массива
    int min = A[0];
    int sum = 0;
    while (i < 5) {

        if (A[i] < min) {//найти минимум в массиве
            min = A[i];
        if (min > 3)
            continue;
        }
        if (A[i] > max) {//найти максимум в массиве
            max = A[i];
        }  
        
        if (i < 5) {//найти сумму элементов в массиве
            sum = sum + A[i];

        if (sum > 14) //если сумма превидит 14 остановится
            break;
        }
        i++;
    }
    printf("Максимальный элемент массива: %d\n", max);
    printf("Мин. элемент массива: %d\n", min);
    printf("Сумма элементов массива: %d\n", sum);


//do while 
int A[5] = { 1,2,3,4,5 };
int i = 0;
int max = A[i];
do {
    if (A[i] > max) {
        max = A[i];

    }
    i++;
} while (i < 5);

//for
int a[3][3] = { {2,7,0},{1,6,9},{5,9,1} };
for (int i = 0; i < 3; i++) {
    for (int j = 0; j < 3; j++) {
        printf("%d", a[i][j]);
    }
    printf("\n");
}



    //Вывести четные элементы в двумерном массиве
    int a[3][3] = { {1, 2, -5},{2,4,8}, {1,3,10} };

    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            if (a[i][j] % 2 == 0) {

                printf("%d ", a[i][j]);

            }
        }
    }




#include <iostream>

#include <locale.h>
#include <stdio.h>
int main(void) {
    setlocale(LC_ALL, "Russian");

    int a[3][3] = { {1,3,5},{4,-1,2},{8,3,2} };
    int max = a[0][0];
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            if (a[i][j]>max) {
                continue;
                max = a[i][j];
                
            }
        }
    }
    
    return 0;

}



    int a[4][4] = { {1,-3,5,5} ,{3,-4,2,8},{4,-1,7,2},{8,3,1,2} };
    int max = a[0][0];
    int min = a[0][0];
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++)
             {
            printf("%d ", a[i][j]);
            
            if (a[i][j] > max) { //max
                max = a[i][j];
                
            }
            if (a[i][j] < min) { //min
                min = a[i][j];

            }
        }
        printf(" \n");
    }

    printf("Максимальное значение в массиве: %d\n", max);
    printf("Минимальное значение в массиве: %d\n", min);

    return 0;

}
